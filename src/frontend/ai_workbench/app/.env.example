# AI Workbench Environment Variables

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database Configuration (if using Prisma)
DATABASE_URL="postgresql://username:password@localhost:5432/ai_workbench"

# NextAuth Configuration (if implementing authentication)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001

# Feature Flags
NEXT_PUBLIC_ENABLE_TUTORIAL=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# External Services (placeholder for future integrations)
# OPENAI_API_KEY=your-openai-api-key
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
